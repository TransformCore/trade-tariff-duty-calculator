<%= link_to('Back', @step.previous_step_path, class: "govuk-back-link") %>

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <%= form_for @step, builder: GOVUKDesignSystemFormBuilder::FormBuilder, url: additional_codes_path do |f| %>
        <%= f.govuk_error_summary %>
        <span class="govuk-caption-xl">Calculate import duties</span>
        <h1 class="govuk-heading-xl">Describe your goods in more detail</h1>
        <%= f.govuk_collection_select :additional_code, @step.options_for_select, :id, :name, options: { prompt: true }, label: { text: '' }, hint: { text: "To trade this commodity, you need to specify an additional 4 digits, known as an additional code. This affects the #{@step.measure_type_description}." } %>
        <%= f.govuk_submit %>
      <% end %>
    </div>
  </div>
</main>
